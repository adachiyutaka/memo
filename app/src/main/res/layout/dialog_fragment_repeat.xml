<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/text_view_time_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_view_frequency"
        android:layout_alignBottom="@+id/text_view_frequency"
        android:layout_margin="8dp"
        android:layout_toEndOf="@+id/text_view_frequency"
        android:text="TextView" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/text_view_time_scale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_view_time_amount"
        android:layout_alignBottom="@+id/text_view_time_amount"
        android:layout_margin="8dp"
        android:layout_toEndOf="@+id/text_view_time_amount" />

    <android.support.v7.widget.ContentFrameLayout
        android:id="@+id/day_of_week_choice_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_frequency" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        android:layout_below="@id/day_of_week_choice_fragment"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/text_view_time_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/line"
        android:layout_margin="8dp"
        android:text="TextView" />

    <RadioGroup
        android:id="@+id/radio_group_end_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text_view_time_end"
        android:layout_toEndOf="@+id/text_view_time_end">

        <RadioButton
            android:id="@+id/radio_button_no_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/radio_button_repeat_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/radio_button_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RadioButton" />

    </RadioGroup>

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/radio_group_end_choice"
        android:layout_margin="8dp"
        android:text="Button" />

    <TextView
        android:id="@+id/text_view_repeat_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/radio_group_end_choice"
        android:layout_margin="8dp"
        android:layout_toStartOf="@+id/button_finish"
        android:layout_weight="1"
        android:text="TextView" />

</RelativeLayout>