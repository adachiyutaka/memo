<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/pref_title_root">

    <PreferenceCategory
        android:title="@string/pref_sub_title_start_up"
        android:key="pref_key_start_up">
        <SwitchPreference
            android:key="start_up_disuse"
            android:title="@string/pref_title__start_up_disuse" />
    </PreferenceCategory>

        <ListPreference
        android:key="pref_key_lock_screen"
        android:summary="@string/pref_summary_lock_screen"
        android:title="@string/pref_sub_title_lock_screen"
        android:entries="@array/entries_lock_screen"
        android:entryValues="@array/entries_lock_screen"/>

    <PreferenceCategory android:title="@string/pref_title_reminder"
        android:summary="@string/pref_summary_reminder">
        <Preference
            android:key="pref_key_reminder_morning"
            android:summary="@string/pref_summary_reminder_morning"
            android:title="@string/pref_sub_title_reminder_morning"
            android:defaultValue="8"/>
        <Preference
            android:key="pref_key_reminder_afternoon"
            android:summary="@string/pref_summary_reminder_afternoon"
            android:title="@string/pref_sub_title_reminder_afternoon"
            android:defaultValue="13"/>
        <Preference
            android:key="pref_key_reminder_evening"
            android:summary="@string/pref_summary_reminder_evening"
            android:title="@string/pref_sub_title_reminder_evening"
            android:defaultValue="18"/>
        <Preference
            android:key="pref_key_reminder_night"
            android:summary="@string/pref_summary_reminder_night"
            android:title="@string/pref_sub_title_reminder_night"
            android:defaultValue="21"/>

    </PreferenceCategory>
</PreferenceScreen>